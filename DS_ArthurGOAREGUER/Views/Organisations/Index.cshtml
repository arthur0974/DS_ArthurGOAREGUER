@model IEnumerable<DS_ArthurGOAREGUER.Models.Organisation>

@{
    ViewData["Title"] = "Organisations";
}

<h2>Organisations</h2>

<p>
    <a asp-action="Create">Nouveau</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tournoi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personne)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poste)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tournoi.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personne.PrenomNom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poste.Nom)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Modifier</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Détails</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
