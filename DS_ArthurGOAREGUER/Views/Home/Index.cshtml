@{
    ViewData["Title"] = "Accueil";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/organisation.png" alt="" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Voir la liste des membres de l'organisation<br />
                    <a class="btn btn-default" asp-area="" asp-controller="Organisations" asp-action="Index">Organisation</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/joueurs.png" alt="" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Ajouter un participant<br />
                    <a class="btn btn-default" asp-area="" asp-controller="Participants" asp-action="Create">Ajouter</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/joueurs2.png" alt="" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Ajouter un résultat<br />
                    <a class="btn btn-default" asp-area="" asp-controller="Resultats" asp-action="Create">Ajouter</a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Données de base</h2>
        <ul>
            <li><a asp-area="" asp-controller="Tournois" asp-action="Index">Liste des tournois</a></li>
            <li><a asp-area="" asp-controller="Postes" asp-action="Index">Liste des postes</a></li>
            <li><a asp-area="" asp-controller="Jeux" asp-action="Index">Liste des jeux</a></li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Personnes</h2>
        <ul>
            <li><a asp-area="" asp-controller="Personnes" asp-action="Index">Liste des personnes</a></li>
            <li><a asp-area="" asp-controller="Participants" asp-action="Index">Liste des participants</a></li>
            <li><a asp-area="" asp-controller="Organisations" asp-action="Index">Liste des membres de l'organisation</a></li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Match</h2>
        <ul>
            <li><a asp-area="" asp-controller="Tournois" asp-action="Index">Liste des tournois</a></li>
            <li><a asp-area="" asp-controller="Championnats" asp-action="Index">Liste des championnats</a></li>
            <li><a asp-area="" asp-controller="Resultats" asp-action="Index">Liste des résultats</a></li>
        </ul>
    </div>
</div>
