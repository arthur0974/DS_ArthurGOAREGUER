@model DS_ArthurGOAREGUER.Models.Championnat

@{
    ViewData["Title"] = "Supprimer";
}

<h2>Supprimer</h2>

<h3>Êtes-vous sûr de vouloir supprimer ceci ?</h3>
<div>
    <h4>Championnat</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Tournoi)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tournoi.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Jeux)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Jeux.Nom)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-default" /> |
        <a asp-action="Index">Retour</a>
    </form>
</div>
