@model IEnumerable<DS_ArthurGOAREGUER.Models.Resultat>

@{
    ViewData["Title"] = "Résultats";
}

<h2>Résultats</h2>

<p>
    <a asp-action="Create">Nouveau</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Championnat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personne1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personne2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateDebut)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Championnat.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personne1.PrenomNom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personne2.PrenomNom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateDebut)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Modifier</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Détails</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
